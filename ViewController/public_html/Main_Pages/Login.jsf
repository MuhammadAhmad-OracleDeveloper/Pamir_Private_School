                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc18"/>-->
                </af:gridRow>
                <af:gridRow marginTop="0px" height="auto" id="gr7">
                    <af:gridCell marginStart="5px" width="50%" id="gc19"/>
                    <af:gridCell marginStart="5px" width="44%" id="gc20" halign="center" valign="middle"
                                 inlineStyle=" padding-left: 69px; padding-right: 72px" styleClass="login_background">
                        <af:link id="l1"
                                 icon="#{resource['images:Login1.gif']}"
                                 action="#{LoginsBean.login_action}"/>
                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc21"/>-->
                </af:gridRow>
                <af:gridRow marginTop="0px" height="auto" marginBottom="5px" id="gr8">
                    <af:gridCell marginStart="5px" width="50%" id="gc22"/>
                    <af:gridCell marginStart="5px" width="50%" id="gc11" halign="center" valign="middle"
                                 styleClass="login_background"
                                 inlineStyle=" border-bottom-left-radius: 20px; border-bottom-right-radius: 20px; padding: 0px 104px 0px 102px;">
                        <af:spacer width="238" height="30" id="s4"/>
                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc24"/>-->
                </af:gridRow>
            </af:panelGridLayout>
       
        </af:form>
    </af:document>
</f:view>
