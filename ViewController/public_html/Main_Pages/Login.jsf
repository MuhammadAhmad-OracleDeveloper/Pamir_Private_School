                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc6"/>-->
                </af:gridRow>
                <af:gridRow marginTop="0px" height="auto" id="gr4">
                    <af:gridCell marginStart="100px" width="50%" id="gc10"/>
                    <af:gridCell marginStart="5px" width="50%" id="gc23" halign="center" valign="middle"
                                 styleClass="login_background" inlineStyle="padding-left: 25px; padding-right:26px;">
                        <af:spacer width="393" height="30" id="s1"/>
                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc12"/>-->
                </af:gridRow>
                <af:gridRow marginTop="0px" height="auto" id="gr5">
                    <af:gridCell marginStart="5px" width="50%" id="gc13" halign="end" valign="middle">
                        <af:panelGroupLayout id="pgl2" layout="vertical">
                            <af:outputLabel value="Ir-Soft" id="ol4"
                                            inlineStyle="font-weight: bold;font-size: 80px;font-family: cursive; text-shadow: 0px 5px 3px #a67f48;
                                            color: #a67f48;-webkit-text-stroke: 0.5px white;-webkit-text-fill-color: #a67f48;"/>
                            <af:spacer width="100" height="25" id="s6"/>
                            <af:outputLabel value="Enterprise Resource Planing(E.R.P)" id="ol5"
                                            inlineStyle="font-weight: bold;font-size: xx-large;font-family: cursive; text-shadow: 0px 5px 3px #a67f48;
                                            color: #a67f48;-webkit-text-stroke: 0.5px white;-webkit-text-fill-color: #a67f48;"/>
                        </af:panelGroupLayout>
                    </af:gridCell>
                    <af:gridCell marginStart="5px" width="50%" id="gc14" valign="middle" halign="center"
                                 inlineStyle="padding-top: 25px; padding-bottom: 25px; padding-left: 24px;padding-right: 28px;"
                                 styleClass="login_background">
                        <af:panelGroupLayout id="pgl3" layout="horizontal">
                            <af:image shortDesc="user_image" source="#{resource['images:useer_loogin.png']}" id="i2"/>
                            <af:outputLabel value="Username" id="ol3"
