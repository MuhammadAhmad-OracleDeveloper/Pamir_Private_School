                    <af:gridCell marginStart="5px" width="50%" id="gc1"/>
                    <af:gridCell marginStart="5px" width="50%" id="gc2">
                        <af:spacer width="10" height="150" id="s7"/>
                    </af:gridCell>
                    
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc9"/>-->
                </af:gridRow>
                <af:gridRow marginTop="5px" height="auto" id="gr2">
                    <af:gridCell marginStart="5px" width="50%" id="gc4"/>
                    <af:gridCell marginStart="5px" width="50%" id="gc5" halign="center" valign="middle"
                                 styleClass="login_background"
                                 inlineStyle=" border-top-left-radius: 20px; border-top-right-radius: 20px; padding: 0px 104px 0px 102px; ">
                        <af:spacer width="238" height="30" id="s8"/>
                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc3"/>-->
                </af:gridRow>
                <af:gridRow marginTop="0px" height="auto" id="gr3">
                    <af:gridCell marginStart="5px" width="50%" id="gc7"/>
