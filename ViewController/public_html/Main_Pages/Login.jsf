                        </af:panelGroupLayout>
                        <af:spacer width="100" height="5" id="s3"/>
                        <af:panelGroupLayout id="pgl4" layout="horizontal">
                            <af:inputText contentStyle="font-size: large;" columns="38" id="it1"
                                          placeholder="User Name" required="true" simple="true"
                                          requiredMessageDetail="Please enter Username..!" binding="#{LoginsBean.it1}"/>
                        </af:panelGroupLayout>
                        <af:spacer width="0" height="20" id="s2"/>
                        <af:panelGroupLayout id="pgl6" layout="horizontal">
                            <af:image shortDesc="password_image" source="#{resource['images:password_login.png']}"
