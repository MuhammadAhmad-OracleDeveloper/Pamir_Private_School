                            <af:outputLabel value="Password" id="ol2"
                                            inlineStyle="font-weight: bold;font-size: large;color:#a67f48;"/>
                        </af:panelGroupLayout>
                         <af:spacer width="100" height="5" id="s9"/>
                        <af:panelGroupLayout id="pgl5" layout="horizontal">
                            <af:inputText id="it2" placeholder="Password" required="true"
                                          contentStyle="font-size: large;" columns="38"
                                          secret="true" simple="true" 
                                          requiredMessageDetail="Please enter Password..!" binding="#{LoginsBean.it2}"/>
                        </af:panelGroupLayout>
                    </af:gridCell>
                    <!--<af:gridCell marginStart="5px" width="50%" marginEnd="5px" id="gc15"/>-->
                </af:gridRow>
                <af:gridRow marginTop="0px" height="auto" id="gr6">
                    <af:gridCell marginStart="5px" width="50%" id="gc16"/>
